   <section id="fetch">
      <input type="text" placeholder="Search..." id="term" />
      <button id="search">Go</button>
   </section>

<h2>Results</h2>
	<div id="results">
	</div>
	
	<script src="http://cdnjs.cloudflare.com/ajax/libs/mustache.js/0.7.0/mustache.min.js"></script>
	<script id="results-template" type="text/template">

		{{#:items}}
	
			<h3>{{:item.:title}}</h3>  
			<h4>{{:item.:author}}</h4>
			<p>
			{{:item.:summary}}
			</p>
		
		{{/:items}}
	</script>
	<script>

	$(document).ready(function(){
	
	 var getResults = function(){

        $('#results').html("<h2 class='no_results'>Loading...</h2>");

        var searchquery = $('#term').val();
	
			$.getJSON("/main/searchjson.json?utf8=%E2%9C%93&q=" + searchquery, function(data) {
			   var results = data.message
			   if (results != "no results") {
                 var template = $('#results-template').html();
			    var info = Mustache.to_html(template, data);
			    $('#results').html(info);
                } 
                  else 
                  {
		          $('#results').html("<h2>No Results</h2>");  	
			 }
			
			});
	     	};
	
		
		  $('#search').click(getResults);
		  	});
	</script>