<h2>Results</h2>
	<div id="results">
	</div>
	<script src="http://cdnjs.cloudflare.com/ajax/libs/mustache.js/0.7.0/mustache.min.js"></script>
	<script id="results-template" type="text/template">

		{{#:items}}
				<div class="resultbox shadow">
			<h3>{{:item.:title}} - {{:item.:author}}</h3>
			{{:item.:summary}}
			</p>
			</div>
		{{/:items}}
	</script>
	<script>
		$(function() {
			$.getJSON('http://localhost:4000/main/searchjson.json?utf8=%E2%9C%93&q=kevin costner', function(data) {
			    var template = $('#results-template').html();
			    var info = Mustache.to_html(template, data);
			    $('#results').html(info);
			});
		});
	</script>